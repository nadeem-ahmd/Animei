<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fill">

    <ListView
        android:id="@+id/anime_episodes_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/episodes_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorAccent"
        android:minWidth="70dip"
        android:minHeight="70dip" />

    <TextView
        android:id="@+id/fragment_episodes_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_episodes_found"
        android:textColor="@color/dialogColorAccent"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>